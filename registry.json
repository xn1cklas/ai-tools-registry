{
  "$schema": "https://ui.shadcn.com/schema/registry.json",
  "name": "ai-tools",
  "homepage": "https://ai-tools-registry.vercel.app",
  "items": [
    {
      "name": "design-system",
      "type": "registry:style",
      "dependencies": ["radix-ui"],
      "registryDependencies": [
        "@ai-tools/button",
        "@ai-tools/input",
        "@ai-tools/calendar",
        "@ai-tools/card",
        "@ai-tools/label",
        "@ai-tools/popover",
        "@ai-tools/textarea"
      ],
      "cssVars": {
        "light": {
          "primary": "oklch(0.63 0.17 149)",
          "primary-foreground": "oklch(0.985 0 0)",
          "radius": "0.825rem"
        },
        "dark": {
          "primary": "oklch(0.63 0.17 149)",
          "primary-foreground": "oklch(0.985 0 0)"
        }
      },
      "files": [
        {
          "path": "registry/ai-tools/rules/AGENTS.md",
          "type": "registry:file",
          "target": "~/AGENTS.md"
        }
      ]
    },
    {
      "name": "chart",
      "type": "registry:ui",
      "title": "Chart",
      "description": "Chart UI primitives (container, tooltip, legend).",
      "files": [
        { "path": "registry/ai-tools/ui/chart.tsx", "type": "registry:ui" }
      ]
    },
    {
      "name": "websearch",
      "type": "registry:component",
      "title": "Web Search",
      "description": "AI SDK tool that searches the web. Includes a results renderer.",
      "dependencies": ["zod", "ai"],
      "registryDependencies": ["@ai-tools/card"],
      "files": [
        {
          "path": "registry/ai-tools/tools/websearch/tool.ts",
          "type": "registry:file",
          "target": "~/ai/tools/websearch/tool.ts"
        },
        {
          "path": "registry/ai-tools/tools/websearch/component.tsx",
          "type": "registry:file",
          "target": "~/ai/tools/websearch/component.tsx"
        }
      ]
    },
    {
      "name": "stats",
      "type": "registry:component",
      "title": "Public Stats",
      "description": "AI SDK tool that fetches global earthquake counts from USGS and renders a chart.",
      "dependencies": ["zod", "ai", "recharts"],
      "registryDependencies": ["@ai-tools/card", "@ai-tools/chart"],
      "files": [
        {
          "path": "registry/ai-tools/tools/stats/tool.ts",
          "type": "registry:file",
          "target": "~/ai/tools/stats/tool.ts"
        },
        {
          "path": "registry/ai-tools/tools/stats/component.tsx",
          "type": "registry:file",
          "target": "~/ai/tools/stats/component.tsx"
        }
      ]
    },
    {
      "name": "markdown",
